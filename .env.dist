# ---- Core server ----
CODESPACE_SERVER_HOST=
CODESPACE_SERVER_PORT=8080
CODESPACE_SERVER_ALLOW_ORIGIN=
CODESPACE_SERVER_LOG_LEVEL=info
CODESPACE_SERVER_JWT_SECRET=

# K8s client limits
CODESPACE_SERVER_KUBE_QPS=50
CODESPACE_SERVER_KUBE_BURST=100

# Local login
CODESPACE_SERVER_ENABLE_LOCAL_LOGIN=false
CODESPACE_SERVER_BOOTSTRAP_USER=
CODESPACE_SERVER_BOOTSTRAP_PASSWORD=

# Session cookie
CODESPACE_SERVER_SESSION_COOKIE=
CODESPACE_SERVER_SESSION_TTL_MINUTES=60
CODESPACE_SERVER_ALLOW_TOKEN_PARAM=false

# OIDC (leave empty to disable)
CODESPACE_SERVER_OIDC_ISSUER=
CODESPACE_SERVER_OIDC_CLIENT_ID=
CODESPACE_SERVER_OIDC_CLIENT_SECRET=
CODESPACE_SERVER_OIDC_REDIRECT_URL=
# Comma-separated (default used if empty): openid,profile,email
CODESPACE_SERVER_OIDC_SCOPES=

# RBAC (Casbin) file paths (optional; defaults to /etc/codespace-operator/rbac/*)
CODESPACE_SERVER_RBAC_MODEL_PATH=
CODESPACE_SERVER_RBAC_POLICY_PATH=
